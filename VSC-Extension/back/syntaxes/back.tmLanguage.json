{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Backlang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#primitives"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.back",
				"match": "\\b(import|struct|let|implementation|of|static|fn|enum|bitfield|asm)\\b"
			}]
		},
		"primitives": {
			"patterns": [{
				"name": "primitive.control.back",
				"match": "\\b(u8|u16|u32|i32|i16|i32|i64|bool|string)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.back",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.back",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.back"
}